<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/background">

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/imgLogin"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        app:iss_auto_cycle="true"
        app:iss_period="2000"
        app:iss_delay="0"
        app:iss_selected_dot="@drawable/default_selected_dot"
        app:iss_unselected_dot="@drawable/default_unselected_dot"
        app:iss_title_background="@color/purple_light"
        android:background="@color/background"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txUsernameLogin"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:hint="USERNAME"
        app:hintTextColor="@color/blue_light"
        app:boxBackgroundColor="@color/background"
        app:boxStrokeColor="@color/blue_light"
        android:layout_below="@+id/imgLogin"
        android:layout_centerInParent="true"
        android:textColorHint="@color/blue_light">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edUsernameLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txPasswordLogin"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="PASSWORD"
        app:hintTextColor="@color/blue_light"
        app:boxBackgroundColor="@color/background"
        app:boxStrokeColor="@color/blue_light"
        android:layout_below="@+id/txUsernameLogin"
        android:layout_centerInParent="true"
        android:textColorHint="@color/blue_light">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edPasswordLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/white"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txPasswordLogin"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_button"
        android:text="LOGIN"
        android:textColor="@color/white_custom"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/box_button1"
        android:text="Register"
        android:textColor="@color/white_custom"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>